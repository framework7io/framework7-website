        tr
          td margin-left
          td Applies margin to the left
        tr
          td margin-right
          td Applies margin to the right
        tr
          td margin-top
          td Applies margin to the top
        tr
          td margin-bottom
          td Applies margin to the bottom
        tr
          td margin-horizontal
          td Applies margin to the left and right
        tr
          td margin-vertical
          td Applies margin to the top and bottom
        tr
          td margin-half
          td Applies half-value margin to all sides
        tr
          td margin-left-half
          td Applies half-value margin to the left
        tr
          td margin-right-half
          td Applies half-value margin to the right
        tr
          td margin-top-half
          td Applies half-value margin to the top
        tr
          td margin-bottom-half
          td Applies half-value margin to the bottom
        tr
          td margin-horizontal-half
          td Applies half-value margin to the left and right
        tr
          td margin-vertical-half
          td Applies half-value margin to the top and bottom
        tr
          td no-margin
          td Removes margin
        tr
          td no-margin-left
          td Removes left margin
        tr
          td no-margin-right
          td Removes right margin
        tr
          td no-margin-top
          td Removes top margin
        tr
          td no-margin-bottom
          td Removes bottom margin
        tr
          td no-margin-horizontal
