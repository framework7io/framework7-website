        .footer-sponsors-title Sponsored by
        .custom-sponsors
          - var sponsors = getSponsors(getJSONData('sponsors/sponsors.json'));
          if (sponsors.goldSponsor)
            each sponsor in sponsors.goldSponsor
              a.border(href=sponsor.link, target="_blank")
                img(src='/i/sponsors/' + (sponsor.image_h || sponsor.image), alt=sponsor.title, title=sponsor.title)
