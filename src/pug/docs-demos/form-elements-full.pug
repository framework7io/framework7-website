extends _layout-ios
block vars
  - var includeF7Icons = true;
block content
  .views
    .view.view-main
      .pages
        .page(data-page="home").navbar-fixed
          .navbar
            .navbar-inner
              .left 
              .center Form Elements
              .right 
          .page-content
            .content-block-title Full Layout
            .list-block
              ul
                li
                  .item-content
                    .item-media
                      i.icon.f7-icons person
                    .item-inner 
                      .item-title.label Name
                      .item-input
                        input(type="text", placeholder="Your name")
                li
                  .item-content
                    .item-media
                      i.icon.f7-icons email
                    .item-inner 
                      .item-title.label E-mail
                      .item-input
                        input(type="email", placeholder="E-mail")
                li
                  .item-content
                    .item-media
                      i.icon.f7-icons world
                    .item-inner 
                      .item-title.label URL
                      .item-input
                        input(type="url", placeholder="URL")
                li
                  .item-content
                    .item-media
                      i.icon.f7-icons lock
                    .item-inner 
                      .item-title.label Password
                      .item-input
                        input(type="password", placeholder="Password")
                li
                  .item-content
                    .item-media
                      i.icon.f7-icons phone
                    .item-inner 
                      .item-title.label Phone
                      .item-input
                        input(type="tel", placeholder="Phone")
                li
                  .item-content
                    .item-media
                      i.icon.f7-icons persons
                    .item-inner 
                      .item-title.label Gender
                      .item-input
                        select
                          option Male
                          option Female
                li
                  .item-content
                    .item-media
                      i.icon.f7-icons calendar
                    .item-inner 
                      .item-title.label Birth date
                      .item-input
                        input(type="date", placeholder="Birth day", value="2014-04-30")
                li
                  .item-content
                    .item-media
                      i.icon.f7-icons calendar
                    .item-inner 
                      .item-title.label Date time
                      .item-input
                        input(type="datetime-local")
                li
                  .item-content
                    .item-media
                      i.icon.f7-icons check
                    .item-inner 
                      .item-title.label Switch
                      .item-input
                        label.label-switch
                          input(type="checkbox")
                          .checkbox
                li
                  .item-content
                    .item-media
                      i.icon.f7-icons filter
                    .item-inner
                      .item-title.label Slider
                      .item-input
                        .range-slider
                          input(type="range", min="0", max="100", value="50", step="0.1")
                li.align-top
                  .item-content
                    .item-media
                      i.icon.f7-icons chat
                    .item-inner 
                      .item-title.label Textarea
                      .item-input
                        textarea
                li.align-top
                  .item-content
                    .item-media
                      i.icon.f7-icons chat
                    .item-inner 
                      .item-title.label Resizable
                      .item-input
                        textarea.resizable

