extends _layout
block content
  .views
    .view.view-main
      .navbar
        .navbar-inner
          .left 
          .center.sliding Smart Select Maxlength
          .right 
      .pages.navbar-through
        .page(data-page="home")
          .page-content
            .list-block
              ul
                li
                  a(href="#").item-link.smart-select
                    // "maxlength" attribute to limit number of possible selected items
                    // we won't allow to select more than 3 items
                    select(name="car", multiple, maxlength="3")
                      optgroup(label="Japanese")
                        option(value="honda", selected=true) Honda
                        option(value="lexus") Lexus
                        option(value="mazda") Mazda
                        option(value="nissan") Nissan
                        option(value="toyota") Toyota
                      optgroup(label="German")
                        option(value="audi") Audi
                        option(value="bmw") BMW
                        option(value="mercedes") Mercedes
                        option(value="vw") Volkswagen
                        option(value="volvo") Volvo
                      optgroup(label="American")
                        option(value="cadillac") Cadillac
                        option(value="chrysler") Chrysler
                        option(value="dodge") Dodge
                        option(value="ford") Ford
                    .item-content
                      .item-inner
                        .item-title Car

block scripts
  script.
    var myApp = new Framework7({
      animateNavBackIcon:true
    }); 
    var mainView = myApp.addView('.view-main', {
      dynamicNavbar: true,
    });